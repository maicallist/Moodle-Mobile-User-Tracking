<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/test"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_ffstate"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="Firefox Extension Installed"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:layout_above="@+id/tv_ffstate"
        android:layout_alignLeft="@+id/test"
        android:layout_marginBottom="61dp"
        android:text="Zip Data \n Exit" />

    <Button
        android:id="@+id/btn_rcdimg"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:layout_above="@+id/btn_exit"
        android:layout_alignLeft="@+id/btn_exit"
        android:layout_marginBottom="23dp"
        android:text="Start" />

    <Button
        android:id="@+id/btn_Ins_FF"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:layout_above="@+id/btn_rcdimg"
        android:layout_alignLeft="@+id/btn_rcdimg"
        android:layout_marginBottom="18dp"
        android:text="Install FF Ext" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/test"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:text="Image Recorded"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>